@model Satish.Models.Product

@{
    ViewData["Title"] = "Edit";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Editar productos</h1>

    <h4>Producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="main-cta" type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

}
else
{
<div class="container">
    <h2>No tiene acceso a esta página. Redirigiendo...</h2>
     <script>
         window.location.href = "../Index";
    </script>

</div>
}

<div>
    <a class="checkout-continue-cta" asp-action="Index">Volver a productos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
