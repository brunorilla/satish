@model IEnumerable<Satish.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Colección</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Products" asp-action="Index">
    <p>
        Nombre: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Imagen
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <!--<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> -->
                    <a asp-action="Buy" asp-controller="Cart" asp-route-id="@item.Id">Comprar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                    <!--<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>-->
                </td>
            </tr>
        }
    </tbody>
</table>
