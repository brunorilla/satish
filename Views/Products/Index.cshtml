@model IEnumerable<Satish.Models.Product>


@{
    ViewData["Title"] = "Index";
}

<h1>Colección</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }

 
<section class="container search-container">
    <form class="search-form" asp-controller="Products" asp-action="Index">
        <input type="text" placeholder="Buscar" name="SearchString"><svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M23.822 20.88l-6.353-6.354c.93-1.465 1.467-3.2 1.467-5.059.001-5.219-4.247-9.467-9.468-9.467s-9.468 4.248-9.468 9.468c0 5.221 4.247 9.469 9.468 9.469 1.768 0 3.421-.487 4.839-1.333l6.396 6.396 3.119-3.12zm-20.294-11.412c0-3.273 2.665-5.938 5.939-5.938 3.275 0 5.94 2.664 5.94 5.938 0 3.275-2.665 5.939-5.94 5.939-3.274 0-5.939-2.664-5.939-5.939z" /></svg>
        <input type="submit" value="Filter" />

    </form>
</section>

<section class="container">
    @foreach (var item in Model)
    {
        <article class="product-container">
            <div class="img-container"><img class="img-fluid" src="@Html.DisplayFor(modelItem => item.Image)" alt="@Html.DisplayFor(modelItem => item.Name)" /></div>
            <ul>
                <li>@Html.DisplayFor(modelItem => item.Name)</li>
                <li>$@Html.DisplayFor(modelItem => item.Price)</li>
            </ul>
            <div class="cta-wrapper">
                <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id">Comprar</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detalle</a>
            </div>
        </article>
    }

</section>